<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="otang.crashreport.sample"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="26"
        android:targetSdkVersion="32" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:extractNativeLibs="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Application" >
        <activity
            android:name="otang.crashreport.sample.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Application.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="otang.crashreport.activity.DefaultErrorActivity"
            android:exported="true"
            android:process=":error_activity" />

        <provider
            android:name="otang.crashreport.provider.CrashInitProvider"
            android:authorities="otang.crashreport.crashinitprovider"
            android:exported="true"
            android:initOrder="101" />
        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="otang.crashreport.sample.androidx-startup"
            android:exported="false" >
            <meta-data
                android:name="androidx.emoji2.text.EmojiCompatInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.lifecycle.ProcessLifecycleInitializer"
                android:value="androidx.startup" />
        </provider>
    </application>

</manifest>